<div x-show="open" x-data="{ open: true }" role="alert" class="alert fixed top-4 left-1/2 transform -translate-x-1/2 z-50 w-[800px]">
  <div class="inline-flex flex-col w-full px-6 py-4 rounded-lg text-sm bg-white dark:bg-gray-800 shadow-sm border border-gray-200 dark:border-gray-700/60 text-gray-600 dark:text-gray-400">
    <div class="flex w-full justify-between items-start">
      <div class="flex">
        <svg class="shrink-0 fill-current text-red-500 mt-[3px] mr-3" width="16" height="16" viewBox="0 0 16 16">
          <path
            d="M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm3.5 10.1l-1.4 1.4L8 9.4l-2.1 2.1-1.4-1.4L6.6 8 4.5 5.9l1.4-1.4L8 6.6l2.1-2.1 1.4 1.4L9.4 8l2.1 2.1z" />
        </svg>
        <div>
          <div class="font-medium text-gray-800 dark:text-gray-100 mb-1">An Error Occurred</div>
          <div>
            <%= message %>
          </div>
        </div>
      </div>
      <button class="opacity-60 hover:opacity-70 ml-3 mt-[3px]" @click="open = false">
        <div class="sr-only">Close</div>
        <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16">
          <path
            d="M7.95 6.536l4.242-4.243a1 1 0 111.415 1.414L9.364 7.95l4.243 4.242a1 1 0 11-1.415 1.415L7.95 9.364l-4.243 4.243a1 1 0 01-1.414-1.415L6.536 7.95 2.293 3.707a1 1 0 011.414-1.414L7.95 6.536z" />
        </svg>
      </button>
    </div>
  </div>
</div>
